<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:controls1="using:CommunityToolkit.WinUI.Controls">
    
    <Style x:Key="CommonTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
        <Setter Property="Foreground" Value="{ThemeResource CommonTextColor}" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

    <Style x:Key="CommonRichTextStyle" TargetType="RichTextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
        <Setter Property="Foreground" Value="{ThemeResource CommonTextColor}" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <Style x:Key="CustomMetaDataControl" TargetType="controls:MetadataControl">
        <Setter Property="Separator" Value=" / " />
        <Setter Property="FontFamily" Value="HarmonyOS Sans SC"/>
    </Style>
    <Style x:Key="CustomSettingsExpander" TargetType="controls1:SettingsExpander">
        <Setter Property="FontWeight" Value="Normal" />
    </Style>
    <Style x:Key="CustomSettingsCard" TargetType="controls1:SettingsCard">
        <Setter Property="FontWeight" Value="Normal" />
    </Style>
    <Style x:Key="CustomSelectorBarItem" TargetType="SelectorBarItem">
        <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="EnglishTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Novecento wide" />
        <Setter Property="Foreground" Value="{ThemeResource CommonTextColor}" />
    </Style>

    <Style x:Key="CustomMenuFlyoutSubItem" TargetType="MenuFlyoutSubItem">
        <Setter Property="FontFamily" Value="HarmonyOS Sans SC"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="CustomMenuFlyoutItem" TargetType="MenuFlyoutItem">
        <Setter Property="FontFamily" Value="HarmonyOS Sans SC"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>