<UserControl
    x:Class="NonsPlayer.Components.Views.PluginCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border Name="Body"
            CornerRadius="16"
            Background="White">
        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Name="HeadPreview" Height="150">
                <Image Source="{x:Bind ViewModel.Preview, Mode=OneWay}"
                       Stretch="UniformToFill"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
            </Border>
            <Grid Grid.Row="1" Margin="10,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock
                                Style="{StaticResource CommonTextStyle}"
                                FontWeight="Bold"
                                FontSize="30"
                                Text="{x:Bind ViewModel.Name, Mode=OneWay}">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ViewModel.Description, Mode=OneWay}" VerticalOffset="-80" />
                                </ToolTipService.ToolTip>

                            </TextBlock>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Command="{x:Bind ViewModel.OpenGithubCommand}">
                                <Image Source="ms-appx:///Assets/Icons/github-mark.svg"
                                       Width="23" />
                            </Button>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Margin="0,-7,0,0"
                                   Style="{StaticResource CommonTextStyle}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="#3D3D3D"
                                   Opacity="0.7"
                                   Text="{x:Bind ViewModel.Author, Mode=OneWay}" />
                    </Grid>

                    <Border Grid.Row="1"
                            Margin="0,10,0,0"
                            Background="#3662EC"
                            Width="100"
                            Height="30"
                            HorizontalAlignment="Left"
                            CornerRadius="15">
                        <Grid>
                            <ImageIcon Source="../../Assets/Icons/extension.svg"
                                       Width="20"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10,0,0,0" />
                            <TextBlock x:Name="PluginTypeTextBlock"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,10,0"
                                       Foreground="White"
                                       Style="{StaticResource CommonTextStyle}"
                                       FontSize="16" />
                        </Grid>
                    </Border>
                    <Grid Grid.Row="2" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal">
                            <FontIcon Glyph="&#xE8EC;"
                                      FontSize="14"
                                      Margin="0,0,0,0" />
                            <TextBlock Style="{StaticResource CommonTextStyle}"
                                       Margin="2,1,0,0"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Text="{x:Bind ViewModel.Version, Mode=OneWay}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Orientation="Horizontal">
                            <FontIcon Glyph="&#xE734;"
                                      FontSize="14"
                                      Margin="0,0,0,0" />
                            <TextBlock Style="{StaticResource CommonTextStyle}"
                                       Margin="2,1,0,0"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Text="{x:Bind ViewModel.Stars, Mode=OneWay}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="10,1,0,0"
                                    Orientation="Horizontal">
                            <FontIcon Glyph="&#xE787;"
                                      FontSize="14"
                                      Margin="0,0,0,0" />
                            <TextBlock Style="{StaticResource CommonTextStyle}"
                                       Margin="2,0,0,0"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Text="{x:Bind ViewModel.BuildTime,Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Background="#F6F7F8"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0"
                            Width="100"
                            Height="40"
                            Visibility="{x:Bind ViewModel.VisInstalled, Mode=OneWay}"
                            CornerRadius="10">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock x:Name="InstalledButton"
                                       Style="{StaticResource CommonTextStyle}"
                                       Margin="0,0,10,0"
                                       Foreground="#ADB1B6"
                                       FontSize="16" />
                            <FontIcon Glyph="&#xE73E;"
                                      Foreground="#ADB1B6"
                                      FontSize="14" />
                        </StackPanel>
                    </Border>
                    <Button Grid.Row="0"
                            x:Name="UpgradeButton"
                            IsEnabled="{x:Bind ViewModel.DownloadButtonEnable, Mode=OneWay}"
                            Background="#3662EC"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0"
                            Width="100"
                            Height="40"
                            Visibility="{x:Bind ViewModel.VisUpgrade, Mode=OneWay}"
                            CornerRadius="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="UpdateButton"
                                       Style="{StaticResource CommonTextStyle}"
                                       Margin="0,0,10,0"
                                       Foreground="White"
                                       FontSize="16" />
                            <FontIcon Glyph="&#xE896;"
                                      Foreground="White"
                                      FontSize="14" />
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="0"
                            x:Name="DownloadButton"
                            IsEnabled="{x:Bind ViewModel.DownloadButtonEnable, Mode=OneWay}"
                            Background="#3662EC"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0"
                            Width="100"
                            Height="40"
                            Command="{x:Bind ViewModel.InstallCommand}"
                            Visibility="{x:Bind ViewModel.VisUninstalled, Mode=OneWay}"
                            CornerRadius="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="FunctionButton"
                                       Style="{StaticResource CommonTextStyle}"
                                       Margin="0,0,10,0"
                                       Foreground="White"
                                       FontSize="16" />
                            <FontIcon Glyph="&#xE896;"
                                      Foreground="White"
                                      FontSize="14" />
                        </StackPanel>
                    </Button>
                    <Grid Row="1"
                          Margin="0,-16,0,0"
                          HorizontalAlignment="Right"
                          Visibility="{x:Bind ViewModel.VisInstalled, Mode=OneWay}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Margin="0,0,5,0"
                                Width="20"
                                Padding="0"
                                BorderThickness="0"
                                Background="Transparent">
                            <FontIcon Glyph="&#xE713;"
                                      FontSize="16"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center" />
                        </Button>
                        <Button Grid.Column="1"
                                Margin="0,0,5,0"
                                Width="20"
                                Padding="0"
                                BorderThickness="0"
                                Command="{x:Bind ViewModel.OpenFolderCommand}"
                                Background="Transparent">
                            <FontIcon Glyph="&#xE8B7;" FontSize="16" />
                        </Button>
                        <Button Grid.Column="2"
                                Width="20"
                                Padding="0"
                                BorderThickness="0"
                                Background="Transparent"
                                Command="{x:Bind ViewModel.DeleteCommand}">
                            <FontIcon Glyph="&#xE74D;" FontSize="16" />
                        </Button>
                    </Grid>
                </Grid>

            </Grid>

        </Grid>
    </Border>

</UserControl>